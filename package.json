{
  "name": "ghost-design-system",
  "license": "MIT",
  "version": "1.0.2",
  "description": "Ghost design system - React Component Library",
  "author": {
    "name": "Charles Coqueret",
    "url": "https://github.com/CharlesCoqueret"
  },
  "homepage": "https://charlescoqueret.github.io/ghost-design-system",
  "bugs": {
    "url": "https://github.com/charlescoqueret/ghost-design-system/issues"
  },
  "repository": "https://github.com/charlescoqueret/ghost-design-system.git",
  "keywords": [
    "react",
    "react-component",
    "design",
    "table",
    "header",
    "input",
    "navigation"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:css && npm run build:css-min",
    "build-storybook": "build-storybook -o docs-build -s ./static",
    "build:css": "sass src/assets/index.scss dist/index.css --error-css --stop-on-error",
    "build:css-min": "sass src/assets/index.scss dist/index.min.css --error-css --stop-on-error --style=compressed",
    "clean": "rm -rf npm-*.log package-lock.json node_modules coverage dist docs-build && npm cache verify",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "license": "license-checker --production --relativeLicensePath --csv --out ./THIRD-PARTY.txt",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx,.json --color ./",
    "lint:fix": "eslint --ext .js,.ts,.jsx,.tsx,.json --fix --color ./",
    "nuke": "npm run clean && npm install",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./static",
    "test": "jest",
    "test:coverage": "jest --maxWorkers --colors --coverage",
    "test:watch": "jest --watch"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "disc/style.min.css",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.0",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@szhsin/react-menu": "^2.3.4",
    "classnames": "^2.3.1",
    "color-alpha": "^1.1.3",
    "color-rgba": "^2.4.0",
    "date-fns": "^2.28.0",
    "lodash": "^4.17.21",
    "numeral": "^2.0.6",
    "react-datepicker": "^4.7.0",
    "react-number-format": "^4.9.1",
    "react-select": "^5.2.2",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "@fortawesome/pro-light-svg-icons": "^6.1.0",
    "@fortawesome/pro-regular-svg-icons": "^6.1.0",
    "@fortawesome/pro-solid-svg-icons": "^6.1.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router-dom": "^6.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@fortawesome/pro-light-svg-icons": "^6.1.0",
    "@fortawesome/pro-regular-svg-icons": "^6.1.0",
    "@fortawesome/pro-solid-svg-icons": "^6.1.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@storybook/addon-essentials": "^6.1.2",
    "@storybook/addon-links": "^6.1.2",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.1.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/color-rgba": "^2.1.0",
    "@types/enzyme": "^3.10.11",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.4.1",
    "@types/node": "^12",
    "@types/numeral": "^2.0.2",
    "@types/react": "^16.9.10",
    "@types/react-datepicker": "^4.3.4",
    "@types/react-dom": "^16.9.10",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "babel-loader": "^8.2.1",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "css-loader": "^5.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "license-checker": "^25.0.1",
    "prettier": "^2.6.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^16.14.0",
    "rollup": "^2.69.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "sass": "^1.49.8",
    "sass-loader": "^10.1.0",
    "semantic-release": "^19.0.2",
    "style-loader": "^2.0.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^8.0.11",
    "typescript": "^4.6.2",
    "webpack": "^4.42.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "preset": "conventionalcommits",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "build",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]",
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
