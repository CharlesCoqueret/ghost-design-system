{
  "name": "ghost-design-system",
  "license": "MIT",
  "version": "1.4.10-next.21",
  "description": "Ghost design system - React Component Library",
  "author": {
    "name": "Charles Coqueret",
    "url": "https://github.com/CharlesCoqueret"
  },
  "homepage": "https://charlescoqueret.github.io/ghost-design-system",
  "bugs": {
    "url": "https://github.com/charlescoqueret/ghost-design-system/issues"
  },
  "repository": "https://github.com/charlescoqueret/ghost-design-system.git",
  "keywords": [
    "react",
    "react-component",
    "design",
    "table",
    "header",
    "input",
    "navigation"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:css && npm run build:css-min",
    "build-storybook": "build-storybook -o docs-build",
    "build:css": "sass src/assets/index.scss dist/ghost-design-system.css --error-css --stop-on-error",
    "build:css-min": "sass src/assets/index.scss dist/ghost-design-system.min.css --error-css --stop-on-error --style=compressed",
    "clean": "rm -rf npm-*.log package-lock.json node_modules coverage dist docs-build && npm cache verify",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "license": "license-checker --production --relativeLicensePath --csv --out ./THIRD-PARTY.txt",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx,.json --color ./",
    "lint:fix": "eslint --ext .js,.ts,.jsx,.tsx,.json --fix --color ./",
    "nuke": "npm run clean && npm install",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest",
    "test:coverage": "jest --colors --coverage",
    "test:watch": "jest --watch"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/ghost-design-system.min.css",
