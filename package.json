    "react-collapsed": "^3.3.1",
    "react-datepicker": "4.7.0",
    "react-infinite-scroller": "1.2.6",
    "react-number-format": "^4.9.3",
    "react-select": "^5.3.0",
    "suneditor": "2.43.0",
    "suneditor-react": "3.4.0",
    "yup": "0.32.11"
  },
