  "scripts": {
    "build": "rm -rf dist && rollup -c && npm run build:css",
    "build-storybook": "build-storybook -o docs-build",
    "build:css": "sass src/assets/index.scss dist/ghost-design-system.css --error-css --stop-on-error",
    "clean": "rm -rf npm-*.log package-lock.json node_modules coverage dist docs-build && npm cache verify",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "license": "license-checker --production --relativeLicensePath --csv --out ./THIRD-PARTY.txt",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx,.json --color ./",
    "lint:fix": "eslint --ext .js,.ts,.jsx,.tsx,.json --fix --color ./",
    "nuke": "npm run clean && npm install",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest",
    "test:coverage": "jest --colors --coverage",
    "test:watch": "jest --watch"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/ghost-design-system.css",
